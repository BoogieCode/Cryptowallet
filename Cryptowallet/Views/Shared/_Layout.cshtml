<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Libre+Franklin&display=swap" rel="stylesheet">
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top mynavbar">
        <div class="container">
             <a href="@Url.Action("Index", "Home")"  style=" float: left;
  height: 15px;
  padding: 8px 15px;
  font-size: 18px;
  line-height: 10px;
  color:aliceblue;" >
                    <img src="~/Content/images/walletLogo150x150.png" alt="" width="35px"/>
                </a>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*<a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="~/Content/images/walletLogo.png" title="title" alt="additional title" height="100" width="100"/>
            </a>*@
                @Html.ActionLink("Crypto W", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
           
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Crypto W - Trade cryptocurrencies smart</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
