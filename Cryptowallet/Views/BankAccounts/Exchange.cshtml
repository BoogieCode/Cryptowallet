@model Cryptowallet.Models.ExchangeViewModel
@{
    /**/

    ViewBag.Title = "Exchange";
}

<h2>Exchange</h2>
<hr />

    @using (Html.BeginForm())
    {

        <h3>Change</h3>
        <div class="form-group">
            @* @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })*@
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @* @Html.LabelFor(m => m.fromCurrency, new { @class = "col-md-2 control-label" })*@
            @Html.DropDownListFor(m => m.fromCurrency, Model.FromCurrencyList, "Select currency", new { @class = "form-control" })
        </div>
        <h3>In</h3>

        <div class="form-group">
            @*@ @Html.LabelFor(m => m.toCurrency, new { @class = "col-md-2 control-label" })*@
            @Html.DropDownListFor(m => m.toCurrency, Model.ToCurrencyList, "Select currency", new { @class = "form-control" })
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Exchange" class="btn btn-success" />
            </div>
        </div>
    }
    <font color="green">
        @ViewBag.successMessage
    </font>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            hideOption();
            $("#fromCurrency").on('change', function () {
                hideOption();
            });
        });

        function hideOption() {
            var fromValue = $("#fromCurrency").val();
            $("#toCurrency option").show();
            $("#toCurrency option[value ='" + fromValue+"']").hide();
        }

          @*if('@ViewBag.successMessage'!="")
          {
              $('#divSuccessMessage').show();
          }
            else
          {
             $('#divSuccessMessage').hide();
          }*@
    </script>
}

